@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "List Of Users";
}

@if (Model.Any())
{

    @foreach (var user in Model)
    {
        <div>
            <div class="card-header">
                <h1>User Id: @user.Id></h1>
            </div>
            <div class="card-body">
                <h2>Email: @user.Email</h2>
                @*<h2>City: @user.City</h2>*@

            </div>
            <div class="card-footer">
                <form asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id"  method="post">
                    <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-success">Edit</a>
                    <button type="submit" class="btn btn-success" 
                            onclick="return confirm('Are you sure you want to delete user @user.UserName?')">Delete</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div>
        <div class="card-header">
            <h1>Not user created yet</h1>
        </div>
        <div class="card-body">
            <h2>Create new user below</h2>
        </div>
        <div class="card-footer">
            <a asp-controller="Account" asp-action="Register" class="btn btn-success">Register</a>
        </div>
    </div>
}